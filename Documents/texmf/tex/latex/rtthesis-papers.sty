\newcommand*{\rtpapers@chapter}[2][]{%
  \def\rtpapers@shorttitle{#1}%
  \title{#2}%
  \stepcounter{rtpapers@chapter}
  \ifx\rtpapers@shorttitle\@empty
  \rtpapers@globalchapter{#2}%
  \else
  \rtpapers@globalchapter[#1]{#2}%
  \fi
  \thispagestyle{empty}%
  \renewcommand*{\thesection}{\arabic{section}}%
}

